Device {
  Name = Tape1
  Media Type = tape
  Archive Device = @tape_drive@
  AutomaticMount = yes;               # when device opened, read it
  AlwaysOpen = no;
  RemovableMedia = yes;
  # include platform specific tape options
  @@confdir@/tape_options
  Description = "Tape device. A connecting Director must have the same Name and MediaType."
}

